extends layout

block content
  h1.mt-3.mb-3= title
  form(method='POST' action='')
    div.form-group
      label(for='name') Genre name:
      input#name.form-control.mx-auto.mb-3(type='text', placeholder='FPS, MMORPG, etc.' name='name' value=(undefined===genre ? '' : genre.name) required="true")
      label(for='description') Genre description:
      if genre
        textarea#description.form-control.mx-auto(rows=10 name='description' required="true")=genre.description
      else
        textarea#description.form-control.mx-auto(rows=10 name='description' required="true")
      if password
        label.mt-2(for='password') #[Strong Password:]
        input#password.form-control.mx-auto.mb-3(type='password', name='password' required="true")
    button.btn.btn-primary.mb-3(type='submit') Submit
  if errors 
    for error in errors
      div(class="alert alert-danger mx-auto" role="alert")!= error.msg